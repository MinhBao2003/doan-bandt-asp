@model DoAn_Nhom3.Models.Cart

@{
    ViewBag.Title = "ShowToCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Example</title>
    <link rel="stylesheet" href="~/CSS1/StyleSheet1.css">
    <style>
        #modal-container {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
        }

        #modal-content {
            background-color: #fff;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 50%;
        }

        #close-button {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            #close-button:hover,
            #close-button:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }

        .btn-3d {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 12px 24px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 4px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 5px 0 #2E6E4F;
            transition: all 0.3s ease-in-out;
        }

            .btn-3d:hover {
                color: #2E6E4F;
                background-color: white;
                box-shadow: 0 2px 0 #2E6E4F;
                transform: translateY(3px);
            }

            .btn-3d:active {
                top: 2px;
                box-shadow: none;
            }

        .textbox-3d {
            background-color: white;
            border: none;
            padding: 12px;
            font-size: 16px;
            border-radius: 4px;
            position: relative;
            box-shadow: 0 5px 0 #2E6E4F;
            transition: all 0.3s ease-in-out;
        }

            .textbox-3d:focus {
                outline: none;
                box-shadow: 0 2px 0 #2E6E4F;
                transform: translateY(3px);
            }

            .textbox-3d:active {
                top: 2px;
                box-shadow: none;
            }

        from {
            text-align: center;
        }

        table {
            align-items: center;
        }

        input[type="number"] {
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: box-shadow 0.2s ease-in-out;
        }

            input[type="number"]:focus {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        input[type="submit"] {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.2s ease-in-out;
        }

            input[type="submit"]:hover {
                background-color: #3e8e41;
            }

        td img {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
            transition: transform 0.5s ease-in-out;
        }

            td img:hover {
                transform: scale(1.1);
            }

        td p {
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        }
    </style>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h2>ShowToCart</h2>
    @if (Model != null)
    {
        <table class="table c" >
            <thead>
                <tr>
                    <th>Tên Hàng</th>
                    <th>Hình</th>
                    <th>Giá</th>
                    <th>Số Lượng</th>
                    <th>Thành Tiền</th>
                    <th>Xóa</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    double total = Convert.ToDouble(item.Product.Price.Value * item.Quantity);
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Product.Name)
                        </td>
                        <td>
                            <img src="@Url.Content(item.Product.Photo)" style="width:100px;height:100px;" />
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Product.Price) đ
                        </td>
                        <td>
                            @using (Html.BeginForm("Update_Quantity", "ShoppingCart"))
                            {
                                <input type="hidden" value="@item.Product.Id" name="Id" />
                                <input type="number" value="@item.Quantity" name="Quantity" />
                                <input type="submit" value="Update Quantity" />
                            }
                        </td>
                        <td>
                            Thành Tiền: @total đ
                        </td>
                        <td>
                            <a href="/ShoppingCart/RemoveCartItem/@item.Product.Id">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>


                    <td colspan="5" style="text-align:right;"> Tổng Giá Tiền:@Model.Totel_money() đ</td>
                    @{
                        // Lưu dữ liệu vào ViewData
                        ViewData["TotalMoney"] = Model.Totel_money();
                    }
                </tr>
            </tfoot>
        </table>
        <button class="btn-3d">
            <a style = "text-decoration:none;" href="@Url.Action("Trangchu","TrangChus")"> Tiếp tục mua hàng</a>
        </button>
        <form id="frmThanhToan">
            <table align="center" class="c">
                <tr>
                    <td>
                        <label>Tên:</label><br />
                        <input type="text" id="txtTen" name="ten" class="textbox-3d"><br>
                    </td>
                </tr>

                <tr>
                    <td>
                        <label>Số điện thoại:</label><br />
                        <input type="text" id="txtSDT" name="sdt" class="textbox-3d"><br>
                    </td>
                </tr>

                <tr>
                    <td>
                        <label>Địa chỉ:</label><br />
                        <input type="text" id="txtDiaChi" name="diaChi" class="textbox-3d"><br>
                    </td>
                </tr>
                <tr>
                    <td>
                        <br />
                        <button type="submit" id="btnThanhToan" class="btn-3d">Thanh toán</button>
                    </td>
                </tr>
            </table>
	</form>

	<div id="divSuccessMessage"></div>

	<script>
		$(document).ready(function() {
			$("#frmThanhToan").submit(function(event) {
				event.preventDefault(); // prevent the form from submitting

				var ten = $("#txtTen").val();
				var sdt = $("#txtSDT").val();
				var diaChi = $("#txtDiaChi").val();

				if (ten === "" || sdt === "" || diaChi === "") {
					alert("Vui lòng nhập đầy đủ thông tin!");
				} else {
					var message = "Chúc mừng, " + ten + " với số điện thoại " + sdt + " và địa chỉ " + diaChi + ", bạn đã thanh toán thành công!";
                    $("#divSuccessMessage").empty().append("<p>" + message + "</p>");
                    $("#frmThanhToan")[0].reset();
				}
			});
		});
	</script>

    }


</body>
</html>